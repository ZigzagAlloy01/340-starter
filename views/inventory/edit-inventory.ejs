<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Inventory</title>
    <link rel="stylesheet" href="/public/css/styles.css">
    <script>
        function validateForm() {
            const requiredFields = document.querySelectorAll('[required]');
            for (let field of requiredFields) {
                if (!field.value) {
                    alert(field.name + " is required.");
                    return false;
                }
            }
            return true;
        }
    </script>
</head>
<body>

    <h1>Edit a Vehicle From The Inventory</h1>

    <form id="updateForm" action="/inv/update" method="POST" onsubmit="return validateForm();">
        <label for="inv_make">Vehicle Name (Make):</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= inv_make || '' %>" required>
    
        <label for="inv_model">Vehicle Model:</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= inv_model || '' %>" required>
    
        <label for="inv_year">Vehicle Year:</label>
        <input type="text" id="inv_year" name="inv_year" maxlength="4" value="<%= inv_year || '' %>" required>
    
        <label for="inv_description">Vehicle Description:</label>
        <textarea id="inv_description" name="inv_description" required><%= inv_description || '' %></textarea>
    
        <label for="classification_id">Classification:</label>
        <%- classificationList %>
    
        <label for="inv_price">Price:</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= inv_price || '' %>" required>
    
        <label for="inv_miles">Mileage:</label>
        <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles || '' %>" required>
    
        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" value="<%= inv_color || '' %>" required>
    
        <label for="inv_image">Image Path:</label>
        <input type="text" id="inv_image" name="inv_image" value="<%= inv_image || 'path/to/no-image.jpg' %>" required>
    
        <label for="inv_thumbnail">Thumbnail Path:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail || 'path/to/no-image-thumbnail.jpg' %>" required>
    
        <button type="submit" disabled>Update Vehicle</button>
        <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
    </form>
    <script src="../../public/js/inv-update.js"></script>
</body>