<!-- searchResults.ejs -->
<h1>Search Inventory</h1>
<form action="/inv/search" method="get">
  <input type="text" name="term" placeholder="Enter make, model, or year">
  <button type="submit">Search</button>
</form>

<% if (message) { %>
  <p><%= message %></p>
<% } else { %>
  <ul>
    <% results.forEach(vehicle => { %>
      <li><%= vehicle.inv_make %> <%= vehicle.inv_model %> (<%= vehicle.inv_year %>) - $<%= vehicle.inv_price %></li>
    <% }) %>
  </ul>
<% } %>
